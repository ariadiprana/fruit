<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../template/head.ejs %>
</head>

<body>
    <div id="wrapper">

        <%- include ../template/navigation.ejs %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Corporate</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
              <form action="/admin/corporateemp/edit" method="post" encType="multipart/form-data">
                <div class="col-lg-12">
                  <% if (message.length > 0) { %>
                    <% for(var i=0; i<message.length; i++) { %>
                      <div class="alert alert-danger"><%= message[i] %></div>
                    <% } %>
                  <% } %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Edit Corporate
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input type="text" placeholder="Name" id="name" name="name" class="form-control" value="<%=corporateDetail[0].name%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input type="text" placeholder="Address" id="address" name="address" class="form-control" value="<%=corporateDetail[0].address%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Company Logo</label>
                                            <p>
                                                <% if(corporateDetail[0].logo) { %>
                                                  <img class="img-thumbnail" width="100px" src="<%=logoUrl%>" />
                                                <% } %>
                                                  <input class="form-control" type="file" name="logo" id="logo" value="<%=corporateDetail[0].logo%>">
                                            </p>
                                        </div>
                                        <div class="form-group">
                                            <label>Phone Number</label>
                                            <input type="text" placeholder="Phone Number" id="phone" name="phone" class="form-control" value="<%=corporateDetail[0].phone%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" placeholder="Email" id="email" name="email" class="form-control" value="<%=corporateDetail[0].email%>">
                                        </div>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                    <button type="submit" class="btn btn-default">Update</button>
                    <a href="/admin/corporateemp/detail?corpId=<%=user.corpId%>" class="btn btn-default">Back</a>
                    <input type="hidden" name="corpId" value="<%=  corporateDetail[0].id%>"/>
                    <input type="hidden" name="logoCorp" value="<%=  corporateDetail[0].logo%>"/>
                </div>
                <!-- /.col-lg-12 -->
              </form>
              <!-- /form -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ../template/tail.ejs %>

</body>

</html>
