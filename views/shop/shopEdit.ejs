<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../template/head.ejs %>
</head>

<body>
    <div id="wrapper">

        <%- include ../template/navigation.ejs %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Shop</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
              <form action="/admin/shop/edit" method="post">
                <div class="col-lg-12">
                  <% if (message.length > 0) { %>
                    <% for(var i=0; i<message.length; i++) { %>
                      <div class="alert alert-danger"><%= message[i] %></div>
                    <% } %>
                  <% } %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Shop Detail
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input type="text" placeholder="Name" id="name" name="name" class="form-control" value="<%=shopDetail[0].name%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input type="text" placeholder="Address" id="address" name="address" class="form-control" value="<%=shopDetail[0].address%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Mobile Phone No.</label>
                                            <input type="text" placeholder="Mobile Phone No." id="phone_mobile" name="phone_mobile" class="form-control" value="<%=shopDetail[0].phone_mobile%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Shop Phone No.</label>
                                            <input type="text" placeholder="Shop Phone No." id="phone_shop" name="phone_shop" class="form-control" value="<%=shopDetail[0].phone_shop%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" placeholder="Email" id="email" name="email" class="form-control" value="<%=shopDetail[0].email%>">
                                        </div>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                    <button type="submit" class="btn btn-default">Update</button>
                    <a href="/admin/shop/" class="btn btn-default">Back</a>
                </div>
                <!-- /.col-lg-12 -->
              </form>
              <!-- /form -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ../template/tail.ejs %>

</body>

</html>
