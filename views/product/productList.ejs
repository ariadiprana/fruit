<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../template/head.ejs %>
</head>

<body>
    <div id="wrapper">

        <%- include ../template/navigation.ejs %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Product</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
              <div class="col-lg-12">
                <% if (message.length > 0) { %>
                    <div class="alert alert-success"><%= message %></div>
                <% } %>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    Product List
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                      <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Harga</th>
                            <th>Tipe Satuan</th>
                            <th>Minimum Pembelian</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>

                            <% for(var i=0; i<productList.length; i++) { %>
                              <tr class="">
                                <td><a href="/admin/product/detail/<%= productList[i].id%>"><%= productList[i].name %></a></td>
                                <td><%= productList[i].category_name %></td>
                                <td><%= productList[i].status_stok %></td>
                                <td><%= productList[i].price %></td>
                                <td><%= productList[i].tipe_satuan_name %></td>
                                <td><%= productList[i].min_buy %></td>
                                <td>
                                  <a href='/admin/product/delete/<%= productList[i].id%>'>Delete</a>
                                </td>
                              </tr>
                            <% } %>

                        </tbody>
                      </table>
                    </div>
                  </div>
                  <a class="btn btn-default" href="/admin/product/add" role="button">Add</a>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ../template/tail.ejs %>
    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true,
            "columnDefs": [
              { "width": "30%", "targets": 0 }
            ]
        });
    });
    </script>

</body>

</html>
