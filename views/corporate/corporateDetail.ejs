<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../template/head.ejs %>
</head>

<body>
    <div id="wrapper">

        <%- include ../template/navigation.ejs %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Corporate</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <!-- Corporate Detail Page -->
            <div class="row">
              <div class="col-lg-12">
                <% if (message.length > 0) { %>
                    <div class="alert alert-success"><%= message %></div>
                <% } %>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    Corporate Detail
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                      <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                          <tbody>
                              <tr>
                                  <th>Corporate Name</th>
                                  <td><%= corporateDetail[0].name %></td>
                              </tr>
                              <tr>
                                  <th>Date Created</th>
                                  <td><%= moment(corporateDetail[0].dt_created).format("YYYY-MM-DD") %></td>
                              </tr>
                              <tr>
                                  <th>Created By</th>
                                  <td><%= corporateDetail[0].fullName %></td>
                              </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                  <a href="/admin/corporate/list" class="btn btn-default">Back</a>
                </div>
            </div>
            <!-- /.row -->

            <!-- Corporate User Page -->
            <div style="margin-top:25px"></div>
            <div class="row">
              <div class="col-lg-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    Corporate User List
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                      <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                          <tr>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Full Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>

                          <% for(var i=0; i<corporateUserList.length; i++) { %>
                            <tr class="">
                              <td><%= corporateUserList[i].username %></td>
                              <td><%= corporateUserList[i].role %></td>
                              <td><%= corporateUserList[i].fullName %></td>
                              <td><%= corporateUserList[i].phone %></td>
                              <td><%= corporateUserList[i].email %></td>
                              <td>
                                <a href='/admin/corporateuser/delete?corpId=<%=corporateDetail[0].id%>&corpUserId=<%=corporateUserList[i].id%>'>Delete</a>
                              </td>
                            </tr>
                          <% } %>

                        </tbody>
                      </table>
                    </div>
                  </div>
                  <a href="/admin/corporateuser/add?corpId=<%= corporateDetail[0].id %>" class="btn btn-default">Add</a>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ../template/tail.ejs %>
    <script>
    $(document).ready(function() {
      $('#dataTables-example').DataTable({
          responsive: true,
          "columnDefs": [
            { "width": "30%", "targets": 0 }
          ]
      });
        $('#dataTables-project-list').DataTable({
            responsive: true,
            "columnDefs": [
              { "width": "30%", "targets": 0 }
            ]
        });

    });
    </script>

</body>

</html>
