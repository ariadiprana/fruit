<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../template/head.ejs %>
</head>

<body>
    <div id="wrapper">

      <%- include ../template/navigation.ejs %>

      <div id="page-wrapper">
          <div class="row">
              <div class="col-lg-12">
                  <h1 class="page-header">Payment</h1>
              </div>
              <!-- /.col-lg-12 -->
          </div>
          <!-- /.row -->
          <div class="row">
            <form action="/admin/payment/add" method="post">
              <div class="col-lg-12">
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>
                  <div class="panel panel-default">
                      <div class="panel-heading">
                          Payment
                      </div>
                      <div class="panel-body">
                          <div class="row">
                              <div class="col-lg-6">
                                  <div class="form-group">
                                      <label>Amount</label>
                                      <input type="text" placeholder="Amount" id="amount" name="amount" class="form-control"></input>
                                  </div>
                              </div>
                              <!-- /.col-lg-6 (nested) -->
                          </div>
                          <!-- /.row (nested) -->
                      </div>
                      <!-- /.panel-body -->
                  </div>
                  <!-- /.panel -->
                  <button type="submit" class="btn btn-default">Submit</button>
                  <a href="/admin/corporate/list" class="btn btn-default">Back</a>
              </div>
              <!-- /.col-lg-12 -->
            </form>
            <!-- /form -->
          </div>
          <!-- /.row -->
      </div>
      <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ../template/tail.ejs %>
</body>

</html>
