<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../template/head.ejs %>
  <script src="https://cdn.rawgit.com/konvajs/konva/1.5.0/konva.min.js"></script>
  <meta charset="utf-8">
  <title>Konva Line Polygon Demo</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #F0F0F0;
    }
  </style>
</head>

<body>
    <div id="wrapper">

        <%- include ../template/navigation.ejs %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Map Floor</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
              <form action="/admin/corporateuser/add" method="post">
                <div class="col-lg-12">
                  <% if (message.length > 0) { %>
                    <% for(var i=0; i<message.length; i++) { %>
                      <div class="alert alert-danger"><%= message[i] %></div>
                    <% } %>
                  <% } %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Map Floor
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">
                                      <div class="form-group">
                                        <label>Corporate Name</label>
                                      </div>
                                      <div class="form-group">
                                        <label>Username</label>
                                        <input type="text" placeholder="Username" class="form-control" name="username">
                                      </div>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                  <div id="container"></div>
                                    <script>
                                      var width = window.innerWidth;
                                      var height = window.innerHeight;

                                      var stage = new Konva.Stage({
                                        container: 'container',
                                        width: width,
                                        height: height
                                      });

                                      var layer = new Konva.Layer();

                                      var poly = new Konva.Line({
                                        points: [30,50,  30,120,  100,120,  100,50  ],
                                        fill: '#00D2FF',
                                        stroke: 'black',
                                        strokeWidth: 1,
                                        closed : true
                                      });

                                      // add the shape to the layer
                                      layer.add(poly);

                                      // add the layer to the stage
                                      stage.add(layer);
                                    </script>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                    <button type="submit" class="btn btn-default">Add</button>
                </div>
                <!-- /.col-lg-12 -->
              </form>
              <!-- /form -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ../template/tail.ejs %>

</body>

</html>
