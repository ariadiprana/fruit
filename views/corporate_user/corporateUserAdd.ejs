<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../template/head.ejs %>
</head>

<body>
    <div id="wrapper">

        <%- include ../template/navigation.ejs %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Corporate User</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
              <form action="/admin/corporateuser/add" method="post">
                <div class="col-lg-12">
                  <% if (message.length > 0) { %>
                    <% for(var i=0; i<message.length; i++) { %>
                      <div class="alert alert-danger"><%= message[i] %></div>
                    <% } %>
                  <% } %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Add Corporate User
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">
                                      <div class="form-group">
                                        <label>Corporate Name</label>
                                        <p><%= corporateDetail[0].name %></p>
                                      </div>
                                      <div class="form-group">
                                        <label>Username</label>
                                        <input type="text" placeholder="Username" class="form-control" name="username">
                                      </div>
                                      <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" placeholder="Password" class="form-control" name="password">
                                      </div>
                                      <div class="form-group">
                                        <label>Role</label>
                                        <select class="form-control" name="role">
                                          <option value="Admin">Admin</option>
                                          <option value="Finance">Finance</option>
                                          <option value="Marketing">Marketing</option>
                                          <option value="Contractor">Contractor</option>
                                        </select>
                                      </div>
                                      <div class="form-group">
                                        <label>Full Name</label>
                                        <input type="text" placeholder="Full Name" class="form-control" name="fullName">
                                      </div>
                                      <div class="form-group">
                                        <label>Phone Number</label>
                                        <input type="text" placeholder="Phone Number" class="form-control" name="phone">
                                      </div>
                                      <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" placeholder="Email" class="form-control" name="email">
                                      </div>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                    <button type="submit" class="btn btn-default">Add</button>
                    <a href="/admin/corporate/detail/<%= corporateDetail[0].id %>" class="btn btn-default">Back</a>
                    <input type="hidden" name="corpId" value="<%=  corporateDetail[0].id%>"/>
                </div>
                <!-- /.col-lg-12 -->
              </form>
              <!-- /form -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include ../template/tail.ejs %>

</body>

</html>
